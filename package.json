{
  "name": "@caripizza/ui",
  "description": "A design system and component library made with React, Typescript, and Tailwind CSS.",
  "author": "Cari Palazzolo <cari.pizza@gmail.com> (https://github.com/caripizza/)",
  "version": "0.1.5",
  "main": "dist/index.js",
  "repository": "git@github.com:caripizza/ui.git",
  "license": "MIT",
  "engines": {
    "node": ">=12.22.x <17.x"
  },
  "scripts": {
    "prepare": "husky install",
    "preclean": "rimraf node_modules",
    "prebuild": "rimraf dist",
    "clean": "yarn install",
    "build": "yarn build:css && rollup -c",
    "lint": "eslint --cache --ext ts,tsx src",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "storybook": "concurrently --kill-others --raw \"tsc --project ./tsconfig.dev.json --watch\" \"yarn watch:css\" \"yarn start-storybook -p 6006\"",
    "build-storybook": "yarn build:css && build-storybook -c .storybook",
    "chromatic": "yarn build-storybook && npx chromatic --project-token=92985fc3dcac --force-rebuild",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css",
    "watch:css": "yarn build:css --watch"
  },
  "outputDir": "./dist",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-typescript": "^8.5.0",
    "@storybook/addon-a11y": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addons": ">=3.1.6 < 7.0.0",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/core-common": "^6.5.12",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/react": "^6.5.12",
    "@storybook/theming": "^6.5.12",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^29.1.1",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "chromatic": "^6.10.1",
    "concurrently": "^7.4.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "postcss": "^8.0.9",
    "prettier": "^2.7.1",
    "react-is": ">= 16.8.0",
    "require-from-string": "^2.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "storybook": "^6.5.12",
    "storybook-addon-rtl": "^0.4.3",
    "storybook-addon-themes": "^6.1.0",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  }
}
